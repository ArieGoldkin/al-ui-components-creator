# Supabase MCP Configuration Template
# Copy this file to .env.mcp and fill in your actual values

# Supabase Project Reference (found in your project dashboard)
SUPABASE_PROJECT_REF=your_project_ref_here

# Supabase Personal Access Token (create at https://supabase.com/dashboard/account/tokens)
SUPABASE_ACCESS_TOKEN=your_personal_access_token_here

# MCP Server Configuration
MCP_READ_ONLY=true
MCP_PROJECT_SCOPED=true

# Optional: Specific feature groups to enable (comma-separated)
# Available groups: database, auth, storage, edge-functions, project-management
# MCP_FEATURE_GROUPS=database,project-management
